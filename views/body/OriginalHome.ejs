<%-include('../partials/header.ejs')%>
<link href="/popup.css" rel="stylesheet">
<script defer src="/script/popup.js"></script>
    <%-include('../partials/nav.ejs')%>
    <!-- porducts -->
        <div class="blogs content">
            <button data-modal-target="#modal">Thêm tác phẩm</button>
            <div class="modal" id="modal">
              <div class="modal-header">
                <div class="title">Thêm</div>
                <button data-close-button class="close-button">&times;</button>
              </div>
              <div class="modal-body">
                <form action="/OriginalHome" method="POST" enctype="multipart/form-data" >
                    <div class="control-label col-md-2">Tên tác phẩm:</div>
                    <input type="text" name="name" required>
                    <div class="control-label col-md-2">Hình Ảnh </div>
                    <input type="file" name = "img" required>
                    <input type="submit">
                </form>
              </div>
            </div>
            <div id="overlay"></div>
                    <div class="col l-3">
                        <%data.forEach(Original=>{%>
                            <a href="/OriginalDetail/<%=Original._id%>" class="home-product-item">
                                <div class="flip-card">
                                    <div class="flip-card__front">
                                        <div class="home-product-item__img" style="background-image: url(<%=Original.image%>);"></div>
                                    </div>
                                </div>
                                <h4 class="home-product-item__name"><%=Original.name%></h4>
                                <!-- <div class="home-product-item__price">6.000.000VND</div> -->
                                <button class="btn home-product-item__add">Xem thêm</button>
                            </a>
                        <%})%>
                      
                    </div>


                   
        </div>
        <div class="pagination">
        </div>
        <style>
            footer{
                background-color: #fff;
            }
        </style>
        <%-include('../partials/footer.ejs')%>