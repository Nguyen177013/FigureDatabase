<%-include('../partials/header.ejs')%>
<link href="/popup.css" rel="stylesheet">
<script defer src="/script/popup.js"></script>
    <%-include('../partials/nav.ejs')%>
    <!-- porducts -->
    <button data-modal-target="#modal">Chỉnh sửa </button>
    <div class="modal" id="modal">
      <div class="modal-header">
        <div class="title">chỉnh sửa nhân vật</div>
        <button data-close-button class="close-button">&times;</button>
      </div>
      <div class="modal-body">
        <form action="/charactersHome" method="POST" enctype="multipart/form-data" >
            <div class="control-label col-md-2">Tên nhân vật:</div>
            <input type="text" name="name" required>
           <div class="control-label col-md-2">Xuất hiện trong:</div>
           <select name="origin" id="">
                <%origins.forEach(origin=>{%>
                    <option value="<%=origin._id%>"><%=origin.name%></option>
                <%})%>
           </select>
           <div class="control-label col-md-2">Tên gốc:</div>
            <input type="text" name="original" required>
           <br>
           <div class="control-label col-md-2">Hình ảnh:</div>
           <input type="file" name = "img" required>     
            <input type="submit">
        </form>
      </div>
    </div>
    <div id="overlay"></div>
        <div class="blogs content">
                    <!-- <h2>There're no blogs to display</h2> -->
                    <div class="col l-3">
                        <%data.forEach(characters=>{%>
                            <a href="/charactersDetail/<%=characters._id%>" class="home-product-item">
                                <div class="flip-card">
                                    <div class="flip-card__inner">
                                        <div class="flip-card__front">
                                            <div class="home-product-item__img" style="background-image: url(<%=characters.image%>);"></div>
                                        </div>
                                      
                                    </div>
                                </div>
                                <h4 class="home-product-item__name"><%=characters.name%></h4>
                                <!-- <div class="home-product-item__price">6.000.000VND</div> -->
                                <button class="btn home-product-item__add">Xem thêm</button>
                            </a>
                        <%})%>
                      
                    </div>


                   
        </div>
        <div class="pagination">
        </div>
        <style>
            footer{
                background-color: #fff;
            }
        </style>
        <%-include('../partials/footer.ejs')%>